<%- include("partials/header") -%>
<h1 class="font-italic">Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="composeTitle">  
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea name="composePost" class="form-control" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") -%>